<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="gui.ProgramChooserController" 
      spacing="10" alignment="CENTER">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
    
    <Label text="Select a program to execute:" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
    
    <ListView fx:id="programsListView" VBox.vgrow="ALWAYS"/>
    
    <Button text="Execute Program" onAction="#handleExecuteProgram" 
            style="-fx-font-size: 14px;"/>
</VBox>
